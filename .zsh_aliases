alias sshpi5='ssh -i ~/Credentials/rpi5-1.key eduardo@rpi5-1'
alias noti='curl ntfy.sh/eduardo_notifications -d'
alias z='source ~/.zshrc'
alias ze='vim ~/.zshrc'
alias zae='vim ~/.zsh_aliases'
